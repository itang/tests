#!/usr/bin/env ruby
#/ Usage: watch
#/
#/ Run the tests whenever any relevant files change.
#/

require "pathname"
require "rubygems"
require "bundler"
Bundler.setup :watch

# Put us where we belong, in the root dir of the project.
Dir.chdir Pathname.new(__FILE__).realpath + "../.."

# Run the tests to start.
system "clear; script/test"

require "rb-fsevent"

IgnoreRegex = /\/log|db/

fs = FSEvent.new
fs.watch ["lib", "spec"], latency: 1 do |args|
  unless args.first =~ IgnoreRegex
    system "clear"
    puts "#{args.first} changed..."
    system "script/test"
  end
end
fs.run
